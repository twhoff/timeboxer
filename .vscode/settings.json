{
    "editor.formatOnSave": true, // Enable formatting on save
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "prettier.requireConfig": true, // Only use Prettier when a config file is present
    "eslint.alwaysShowStatus": true,
    "cSpell.words": ["ADHD"] // Show ESLint status in the status bar
}
